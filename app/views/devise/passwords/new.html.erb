<div class='container my-4 text-muted'>

  <h2 class='text-center p-2 text-decoration-underline'>Forgot your password?</h2>
  
  <div class='d-flex justify-content-center align-items-center'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :email, class:'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="actions d-grid mb-4">
        <%= f.submit "Send me reset password instructions", class:'btn btn-outline-primary' %>
      </div>

      <div>
        <%= render "devise/shared/links"%>
      </div>
    <% end %>
  </div>
</div>