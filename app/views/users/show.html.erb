<div class='container'>
  <div class='user-info'>
    <%= render 'shared/user', user: @user %>
  </div>

  <div class='bio'>
    <h3 class='title'>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  <ul>
    <% @user.posts.first(3).each do |post| %>
        <li class='post-info'>
          <h4 class='post-title'><%= link_to post.title, user_posts_path(@user) %></h4>
          <%= render 'shared/post', post: post %>
        </li>
    <% end %>
  <ul>
   
   <div class='footer'>
    <%= link_to 'See all posts', user_posts_path(@user) %>
   </div>
</div>
