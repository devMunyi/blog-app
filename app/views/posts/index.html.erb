<div class='container mt-3 mb-5'>
  <%= render 'shared/user', user: @user %>

  <% @posts.each do |post| %>
    <div class='row card pt-2 pb-2 mb-3 mt-4'>
      <h4><%= link_to post.title, user_post_path(@user, post) %></h4>
      <p><%= post.text %></p>
      <div class='d-flex justify-content-end gap-2'>
        <span>Comments: <%= post.comments_counter %> </span>
        <span> Likes: <%= post.likes_counter %></span>
      </div>

      <div class='container card-body border-top'> 
        <h5>Comments</h5>
        <%post.five_recent_comments.each do |comment| %>
          <div><%= comment.author.name %>: <%= comment.text %></div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class='d-flex justify-content-center align-items-center'>
    <p>Pagination</p>
  </div>
</div>